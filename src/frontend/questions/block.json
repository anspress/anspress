{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "anspress/questions",
  "version": "0.1.0",
  "title": "(AnsPress) Questions",
  "category": "anspress",
  "icon": "list-view",
  "description": "A block to display AnsPress questions.",
  "attributes": {
    "query": {
      "type": "object",
      "default": {
        "pages": 0,
        "offset": 0,
        "order": "desc",
        "orderBy": "date",
        "authors": [],
        "search": "",
        "exclude": [],
        "sticky": false,
        "categories": [],
        "tags": []
      }
    },
    "currentAuthor": {
      "type": "boolean",
      "default": false
    },
    "displayAvatar": {
      "type": "boolean",
      "default": true
    },
    "displayVoteCount": {
      "type": "boolean",
      "default": true
    },
    "displayAnsCount": {
      "type": "boolean",
      "default": true
    },
    "displayMeta": {
      "type": "boolean",
      "default": true
    },
    "displayViews": {
      "type": "boolean",
      "default": true
    },
    "displayActivity": {
      "type": "boolean",
      "default": true
    },
    "displaySolved": {
      "type": "boolean",
      "default": true
    },
    "displayCategories": {
      "type": "boolean",
      "default": true
    },
    "displayTags": {
      "type": "boolean",
      "default": true
    },
    "displayPagination": {
      "type": "boolean",
      "default": true
    },
    "itemsPerPage": {
      "type": "number",
      "default": 10
    },
    "paginationMidSize": {
      "type": "number",
      "default": 3
    },
    "avatarSize": {
      "type": "number",
      "default": 40
    },
    "avatarShape": {
      "type": "string",
      "default": "square"
    }
  },
  "supports": {
    "align": [
      "wide",
      "full"
    ],
    "html": false
  },
  "example": {
    "attributes": {
      "query": {
        "perPage": 5,
        "pages": 0,
        "offset": 0,
        "order": "desc",
        "orderBy": "date",
        "author": "",
        "search": "",
        "exclude": [],
        "sticky": false
      },
      "displayAvatar": true,
      "displayVoteCount": true,
      "displayAnsCount": true,
      "displayActivity": true,
      "displaySolved": true,
      "displayCategories": true,
      "displayTags": true,
      "displayViews": true,
      "displayPagination": true,
      "itemsPerPage": 10,
      "paginationMidSize": 3,
      "avatarSize": 40,
      "avatarShape": "square"
    }
  },
  "editorScript": "file:./js/index.js",
  "render": "file:./php/questions.php",
  "style": "file:./js/style-index.css"
}
